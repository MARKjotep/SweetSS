{
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "outDir": "../../DIST/sweetss",
    "rootDir": ".",
    "baseUrl": ".",
    "noImplicitThis": false,
    "noImplicitAny": true,
    "allowJs": true,
    "checkJs": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "composite": false,
    "declaration": true
  },
  "exclude": [
    "**/.*",
    "./**/css",
    "./**/private",
    "./css",
    "*.js",
    "node_modules"
  ]
}
